<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.blind.back.blind_back.member.biz.MemberMapper">

    <!-- 아이디 중복 체크 -->
    <select id="checkerMemId" parameterType="com.blind.back.blind_back.member.vo.MemberVO" resultType="int">
        SELECT IFNULL(COUNT(1), 0) as flag FROM TBL_MEMBER WHERE MEMID = #{memId}
    </select>

    <!-- 회원 가입 쿼리 -->
    <insert id="insert" parameterType="com.blind.back.blind_back.member.vo.MemberVO">
        INSERT INTO TBL_MEMBER(MEMID, MEMPW, MEMNICK, INSDATE)
        VALUES(#{memId}, #{memPw}, #{memNick}, now())
    </insert>

    <!-- 회원 가입 여부 확인 -->
    <select id="searchMember" parameterType="com.blind.back.blind_back.member.vo.MemberVO" resultType="com.blind.back.blind_back.member.vo.MemberVO">
        SELECT * FROM TBL_MEMBER WHERE MEMID = #{memId}
    </select>
</mapper>